{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/post.css') }}">
{% endblock %}

{% block title %}{{ post.title }} | Serene Chronicles{% endblock %}

{% block body %}
    <article class="post">
        <header class="post-header">
            <h1 class="post-title">{{ post.title }}</h1>
            <p class="post-meta">Published on {{ post.createdAt|date('F j, Y') }}</p>
            <a href="{{ path('app_post_edit', { 'id': post.id }) }}" class="edit-button">Edit Post</a>
        </header>
        <section class="post-content">
            {{ post.content|raw }}
        </section>
        <p>Tags:
            {% for tag in post.tags %}
                <span>{{ tag.name }}</span>{% if not loop.last %}, {% endif %}
            {% endfor %}
        </p>
    </article>
{% endblock %}
