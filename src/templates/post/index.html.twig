{# templates/post/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Posts | Serene Chronicles{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/post_list.css') }}">
{% endblock %}

{% block body %}
    <div class="posts">
        <form method="get" action="{{ path('app_post_index') }}" class="search-form">
            <input type="text" name="q" value="{{ app.request.get('q') }}" placeholder="Search by title or content...">
            <button type="submit">Search</button>
        </form>

        {% for post in pagination.items %}
            <article class="post">
                <h2><a href="{{ path('app_post_show', { 'slug': post.slug }) }}">{{ post.title }}</a></h2>
                <p class="post-meta">Published on {{ post.createdAt|date('F j, Y') }}</p>
                <p>{{ post.content|raw|slice(0, 200) }}...</p>
                <a href="{{ path('app_post_show', { 'slug': post.slug }) }}">Read more</a>
            </article>
        {% endfor %}
    </div>

    <div class="pagination">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}